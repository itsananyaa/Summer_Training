class Node
{
public:
    int data;
    Node *next;
    Node()
    {
        this->data = 0;
        next = NULL;
    }
    Node(int data)
    {
        this->data = data; 
        this->next = NULL;
    }
    Node(int data, Node* next)
    {
        this->data = data;
        this->next = next;
    }
};
Node *findMiddle(Node *head) {
    if (head==NULL)
    return 0;
    int count=0;
    Node* current=head;
    while (current!=NULL){
        count++;
        current=current->next;
    }
    int  middleIndex=count/2;
    current=head;
    for(int i=0; i<middleIndex; ++i){
        current=current->next;
    }
    return current;
}

